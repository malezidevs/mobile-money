{
    "name": "malezidevs/mobile-money",
    "type": "library",
    "description": "Mobile payments API - Kenya",
    "keywords": [
        "malezi-llp",
        "pesa",
        "mobile money",
        "Malezi LLP",
        "mpesa",
        "equitel",
        "equity",
        "api",
        "payments"
    ],
    "homepage": "https://github.com/malezidevs/mobile-money",
    "license": "MIT",
    "authors": [{
        "name": "Malezi LLP",
        "email": "dev@malezi.co.ke",
        "homepage": "https://malezi.co.ke",
        "role": "Developer"
    }],
    "require": {
        "php": ">=7.0",
        "guzzlehttp/guzzle": "^6.3",
        "illuminate/support": "~5.5",
        "ixudra/curl": "^6.16",
        "jivesh/laravel-slack": "^2.0"
    },
    "require-dev": {
        "mockery/mockery": "~1.0",
        "phpunit/php-token-stream": "^1.4",
        "phpunit/phpunit": ">=5.4.3"
    },
    "autoload": {
        "psr-4": {
            "DervisGroup\\Pesa\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DervisGroup\\Pesa\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "DervisGroup\\Pesa\\PesaServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}